{
    // 全局默认设置
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
  
    // 按语言覆盖设置
    "[python]": {
      "editor.tabSize": 4,
      "editor.insertSpaces": true
    },
    "[javascript]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
    },
    "[typescript]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
    },
    "[html]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true
    },
    "[markdown]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": false  // Markdown 中使用实际 Tab 字符
    },
    "[typescriptreact]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": false  // Markdown 中使用实际 Tab 字符
    },
    "[css]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": false  // Markdown 中使用实际 Tab 字符
    },
}